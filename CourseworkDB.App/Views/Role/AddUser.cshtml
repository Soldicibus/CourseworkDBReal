@model CourseworkDB.Data.Models.User

@{
    ViewData["Title"] = "AddUser";
}

<h1>Add User to Role</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Role" asp-action="AddUserToRole" method="put">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role.RoleId" class="control-label"></label>
                <input asp-for="Role.RoleId" class="form-control" />
                <span asp-validation-for="Role.RoleId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add User to Role</button>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
