@model IEnumerable<CourseworkDB.Data.Models.User>

@{
    ViewData["Title"] = "User";
}

@functions {
    string GetRoleClass(string roleName)
    {
        switch (roleName)
        {
            case "Admin":
                return "status admin";
            case "Moderator":
                return "status moderator";
            case "User":
                return "status user";
            case "Sus":
                return "status sus";
            default:
                return "status default";
        }
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <script type="text/javascript">
        window.addEventListener('scroll', function () {
            var scrollPosition = window.pageYOffset;
            document.body.style.setProperty('--scroll-position', scrollPosition * 0.5 + 'px');
        });
    </script>
    <link href="indexStyle.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        header {
            width: 100%;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        body {
            min-height: 100vh;
            background: url('https://i.ibb.co/Qr5NKQ2/good-enough.png') center center/cover no-repeat;
            margin-top: 35px;
            display: flex;
            justify-content: center;
            align-items: center;
            background-position: center calc(var(--scroll-position));
        }

        main.table {
            width: 82vw;
            height: 90vh;
            background-color: #fff5;

            backdrop-filter: blur(7px);
            box-shadow: 0 .4rem .8rem #0005;
            border-radius: .8rem;

            overflow:hidden;
        }

        .table__header {
            width: 100%;
            height: 16%;
            background-color: #fff4;
            padding: .8rem 1 1rem;
        }

        .table__body {
            width: 95%;
            max-height: calc(80% - .8rem);
            background-color: #fffb;

            margin: .8rem auto;
            border-radius: .6rem;
            overflow-x: auto;
            overflow-y: auto;
        }

        .table__body::-webkit-scrollbar {
            width: 0.5rem;
            height: 0.5rem;
        }

        .table__body::-webkit-scrollbar-thumb {
            border-radius: .5rem;
            background-color: #0004;
            visibility: hidden;
        }

        .table__body:hover::-webkit-scrollbar-thumb {
            visibility: visible;
        }
        
        table {
            border-collapse: collapse;
            width: 100%;
            padding: 1rem;
            table-layout: fixed;
        }

        th, td {
            text-align: center;
            width: 100%;
        }

        tbody tr:nth-child(even) {
            background-color: #0000000b;
        }

        tbody tr:hover {
            background-color: #fff6;
        }

        thead th {
            position: sticky;
            top:0;
            left:0;
            background-color: #d5d1defe;
        }

        .status {
            background-color: red;
            padding: .4rem 0;
            border-radius: 2rem;
            text-align: center;
        }

        .status.admin {
            background-color: indianred;
            color: darkred;
        }

        .status.user {
            background-color: #86e49d;
            color: #006b21;
        }

        .status.moderator {
            background-color: darkred;
            color: indianred;
        }

        .status.sus {
            background-color: saddlebrown;
            color: whitesmoke;
        }

        .status.default {
            background-color: #6fcaea;
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .create-button {
            display: inline-block;
            padding: 10px 20px;
            margin: 10px;
            background-color: #3498db;
            color: #ffffff;
            text-align: center;
            border-radius: 5px;
            text-decoration: none;
            transition: all 0.3s ease 0s;
        }

            .create-button:hover {
                background-color: #2980b9;
            }

        .edit-button {
            display: inline-block;
            padding: 10px 20px;
            margin: 10px;
            background-color: #999900;
            color: #ffffff;
            text-align: center;
            border-radius: 5px;
            text-decoration: none;
            transition: all 0.3s ease 0s;
        }

            .edit-button:hover {
                background-color: #666900;
            }

        .details-button,
        .delete-button {
            display: inline-block;
            padding: 10px 20px;
            margin: 10px;
            background-color: #ffffff;
            color: #000000;
            text-align: center;
            border-radius: 5px;
            text-decoration: none;
            transition: all 0.3s ease 0s;
        }

            .details-button:hover {
                background-color: #777777;
            }

        .delete-button {
            background-color: #e74c3c;
        }

            .delete-button:hover {
                background-color: #c0372b;
            }
    </style>
</head>
<body>
    <main class="table">
        <section class="table__header">
            <h1>User</h1>
            <a asp-action="Create" class="create-button">Create New</a>
        </section>
        <section class="table__body">
            <table>
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Username
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Role
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @if (item.Role != null)
                                {
                                <p class="@GetRoleClass(item.Role.RoleName)">
                                        @Html.DisplayFor(modelItem => item.Role.RoleName)
                                </p>
                                }
                                else
                                {
                                <p></p>
                                }
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.UserId }, new { @class = "edit-button" })
                                @Html.ActionLink("Details", "Details", new { id = item.UserId }, new { @class = "details-button" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.UserId }, new { @class = "delete-button" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </main>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
