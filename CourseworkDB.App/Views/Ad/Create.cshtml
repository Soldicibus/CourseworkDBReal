@model CourseworkDB.Data.Dto.AdCreationDto

@{
    ViewData["Title"] = "Create";
}

<style>
    body::after {
        content: "";
        background: url('https://i.ibb.co/Qr5NKQ2/good-enough.png') center center/cover no-repeat;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: -1;
        background-size: cover;
        background-position: center calc(var(--scroll-position));
        filter: blur(5px);
    }

    h1 {
        color: #333;
        margin-bottom: 20px;
    }

    .container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h4 {
        color: #555;
    }

    .back-button {
        display: inline-block;
        margin-top: 20px;
        color: #fff;
        background-color: #007bff;
        border: 1px solid #007bff;
        padding: .375rem .75rem;
        border-radius: .25rem;
        text-decoration: none;
    }

        .back-button:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            text-decoration: none;
        }
</style>

<h1>Create</h1>

<h4>Ad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdCampaignId" class="control-label"></label>
                <input asp-for="AdCampaignId" class="form-control" />
                <span asp-validation-for="AdCampaignId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdTitle" class="control-label"></label>
                <input asp-for="AdTitle" class="form-control" />
                <span asp-validation-for="AdTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdDescription" class="control-label"></label>
                <input asp-for="AdDescription" class="form-control" />
                <span asp-validation-for="AdDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdTypeId" class="control-label"></label>
                <input asp-for="AdTypeId" class="form-control" />
                <span asp-validation-for="AdTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdUrl" class="control-label"></label>
                <input asp-for="AdUrl" class="form-control" />
                <span asp-validation-for="AdUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="back-button">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
